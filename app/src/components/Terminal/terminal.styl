@require "app/styles/charte"

#terminal
	width: 80%
	background-color: $darker
	border: 1px solid $blue
	border-top: none
	overflow-y: auto
	font-family: "VT323"
	line-height: 4vh
	font-size: 3vh
	opacity: 0.95
	height: 90vh
	display: block
	margin: auto
	margin-top: 7.5vh
	box-shadow: 10px 10px 10px 0 $darker
	&::-webkit-scrollbar
		width: 0.5em
		border: 1px
		z-index: 2

	&::-webkit-scrollbar-track
		-webkit-box-shadow: inset 0 0 6px rgba( 0, 0, 0, 0.3 )
		border: 1px $silver
		z-index: 2


	&::-webkit-scrollbar-thumb
		background-color: $blue
		outline: 1px solid $blue
		border: 1px solid $silver
		z-index: 2

@media (orientation: portrait)
	#terminal
		opacity: 1
