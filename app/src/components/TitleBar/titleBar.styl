@require "app/styles/charte"

#title-bar
	font-size: 3vh

#root-bar
	float:left
	border-right: none

#empty-bar
	border-right: none
	border-left: none
	display: block

#closing-cross
	float: right
	width: 3%
	border: 1px solid $silver
	background-color: $cross-blue
	text-align: center
	height: 4vh
	line-height: 3.5vh
	position: relative
	bottom: 4vh

.bars
	border: 1px solid $silver
	background-color: $blue
	height: 4vh

@media (orientation: portrait)
	#title-bar
		font-size: 2.5vh

	#closing-cross
		width: 7%
