@require "app/styles/charte"

#factions
	&-title
		font-size: 5vh
		height: 12vh
		margin: auto
		text-align: center
		padding: 3vh 4vh
	&-list
		width: 90%
		display: flex
		margin: auto

	&-button
		margin: auto
		text-align: center

	&-description
		font-size: 3vh
		border: 3px solid $silver
		width: 87%
		height: 32vh
		margin: 3vh auto
		overflow-y: auto
		white-space: pre-wrap
		padding: .2em 1em
		text-align: justify
		line-height: 2.8vh
		background-color: rgba( 0, 0, 0, 0.5 )

		&::-webkit-scrollbar
				width: 0.5em
				border: 1px
				z-index: 2

		&::-webkit-scrollbar-track
			-webkit-box-shadow: inset 0 0 6px rgba( 0, 0, 0, 0.3 )
			border: 1px $silver
			z-index: 2


		&::-webkit-scrollbar-thumb
			background-color: $blue
			outline: 1px solid $blue
			border: 1px solid $silver
			z-index: 2


.faction
	width: 30%
	height: 28vh
	overflow: hidden
	border: 5px solid
	background-color: rgba( 0, 0, 0, 0.2 )
	padding: 2vh
	margin: auto
	display: flex
	text-align: center
	flex-direction: column
	justify-content: space-between

	&:hover
		border: 5px solid $red
		cursor: url(/images/hover.cur), pointer

	&--selected
		border: 5px solid $blue
		background-color: rgba( 0, 0, 0, 0.5 )

		&:hover
			border: 5px solid $blue
			cursor: url(/images/pointer.cur), pointer

	&::-webkit-scrollbar
			width: 0.5em
			border: 1px
			z-index: 2

	&::-webkit-scrollbar-track
		-webkit-box-shadow: inset 0 0 6px rgba( 0, 0, 0, 0.5 )
		border: 1px $silver
		z-index: 2


	&::-webkit-scrollbar-thumb
		background-color: $blue
		outline: 1px solid $blue
		border: 1px solid $silver
		z-index: 2
	&-name
		font-size: 3.2vh

	&-logo
		height: 100%

@media (orientation: portrait)
	#factions
		&-title
			font-size: 2.8vh
			padding-top: 2vh

		&-description
			height: 45vh

		.faction
			height: auto

			&-name
				display: none

			&-logo
				height: auto
